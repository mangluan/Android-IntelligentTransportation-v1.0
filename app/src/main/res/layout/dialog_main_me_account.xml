<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/huikuang"
        android:layout_width="400dp"
        android:layout_height="200dp">
        <TextView
            android:padding="10dp"
            android:text="充值"
            android:textSize="18sp"
            android:textColor="#20ABE4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:background="#20ABE4"
            android:layout_width="match_parent"
            android:layout_height="1dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="0dp">
            <TextView
                android:text="充值金额："
                android:textSize="15sp"
                android:textColor="#20ABE4"
                android:gravity="center|right"
                android:layout_weight="30"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <EditText
                android:id="@+id/money_et_dialog_main"
                android:layout_marginRight="20dp"
                android:inputType="number"
                android:layout_weight="70"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/baocun_btn_dialog_main"
                android:text="保存"
                android:textSize="18dp"
                android:textColor="#fff"
                android:background="#1692D8"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/qx_btn_dialog_main"
                android:text="取消"
                android:textSize="18dp"
                android:textColor="#fff"
                android:background="#1692D8"
                android:layout_margin="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>