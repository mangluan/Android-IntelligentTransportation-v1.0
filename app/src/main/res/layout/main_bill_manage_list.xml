<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:text="序号"
        android:id="@+id/index_bill_list_main"
        android:background="@drawable/heikuang"
        android:textColor="#000"
        android:padding="5dp"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_weight="10"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        android:text="车号"
        android:id="@+id/carId_bill_list_main"
        android:background="@drawable/heikuang"
        android:textColor="#000"
        android:padding="5dp"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_weight="15"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        android:text="充值金额(元)"
        android:id="@+id/money_bill_list_main"
        android:background="@drawable/heikuang"
        android:textColor="#000"
        android:padding="5dp"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_weight="25"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        android:text="操作人"
        android:id="@+id/name_bill_list_main"
        android:background="@drawable/heikuang"
        android:textColor="#000"
        android:padding="5dp"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_weight="15"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <TextView
        android:text="充值时间"
        android:id="@+id/time_bill_list_main"
        android:background="@drawable/heikuang"
        android:textColor="#000"
        android:padding="5dp"
        android:gravity="center"
        android:textSize="16sp"
        android:layout_weight="25"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
</LinearLayout>